<div class="form-container">
  <div class="form-image">
    <h1>Créez une nouvelle offre</h1>
    <img id="form-image-cover" src="<%= image_path("Illustration4.png") %>" alt="">
  </div>
  <div class="form-offer">
    <%= simple_form_for(@offer) do |f| %>
      <%= f.input :title, label: "Titre", placeholder: "Un titre de poste évocateur."%>
      <%= f.input :expertise, placeholder: "Les compétences attendues par le candidat idéal." %>
      <%= f.input :description, label: "Description courte", placeholder: "Description courte de votre offre." %>
      <%= f.input :content, as: :rich_text_area, label: "Description détaillée", placeholder: "Description détaillée" %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"}, label: "Date de début" %>
      <%= f.input :duration, label: "Durée (3 à 24 mois)", placeholder: "La durée de votre contrat." %>
      <div class="mb-3 integer optional offer_duration" data-controller="disp-frequency">
        <label class="form-label integer optional" for="vol">Nombre de demi-journées par semaine (1 à 5)</label>
        <input type="range" id="vol" name="offer[frequency]" class="range-crea-offer" min="1" max="5" data-action="disp-frequency#change" data-disp-frequency-target="valueFreq">
        <p class="disp-frequency" data-disp-frequency-target="output"></p>
      </div>
      <%= f.input :location, label: "Lieu", placeholder: "Le lieu de travail." %>
      <%= f.input :salary, label: "Salaire", placeholder: "Le salaire brut mensuel (temps plein)." %>
      <%= f.submit id:"button-create-offer", value:"Créer l'offre" %>
    <% end %>
  </div>
</div>
